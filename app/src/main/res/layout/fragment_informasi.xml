<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.informasi.InformasiFragment"
    android:background="@drawable/login">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_informasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#C8B71E"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="4dp">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_tentang_informasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_versi_informasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Versi" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_madeby_informasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Made by" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_layout_informasi"
        tools:ignore="MissingConstraints" />
</RelativeLayout>