<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/login">

    <TextView
        android:id="@+id/label_username"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="89dp"
        android:layout_marginBottom="5dp"
        android:gravity="right|center_vertical"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/input_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="89dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/label_username"
        android:textAlignment="textStart"
        android:textColor="#7C7C7C"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/label_password"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/label_username"
        android:gravity="right|center_vertical"
        android:text="Password"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/input_password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/input_username"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@id/label_password"
        android:ems="10"
        android:inputType="textPassword"
        android:textAlignment="textStart"
        android:textColor="#7C7C7C"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/click_lupa_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_password"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:text="@string/lupa_pass"
        android:textColor="#0038FF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:clickable="true"/>

    <Button
        android:id="@+id/rectangle_button_login"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/click_lupa_password"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#FFE600"
        android:elevation="20dp"
        android:strokeWidth="10"
        android:strokeColor="#47000000"
        android:text="LOG IN"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:viewportWidth="160"
        android:viewportHeight="33" />

    <Button
        android:id="@+id/rectangle_button_daftar"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@id/rectangle_button_login"
        android:backgroundTint="#FFE600"
        android:elevation="20dp"
        android:strokeWidth="10"
        android:strokeColor="#47000000"
        android:text="DAFTAR"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:viewportWidth="160"
        android:viewportHeight="33" />
</RelativeLayout>