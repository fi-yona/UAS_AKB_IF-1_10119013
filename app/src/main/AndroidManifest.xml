<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.uas_akb_if1_10119013">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/diary_splash"
        android:label="Aplikasi UAS AKB 2022 - 10119013"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UAS_AKB_IF1_10119013"
        tools:targetApi="31">
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="RegisterActivity" />
        <activity
            android:name=".MenuActivity"
            android:exported="false"
            android:label="@string/title_activity_menu"
            android:theme="@style/Theme.UAS_AKB_IF1_10119013.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.catatanharian.UpdateCatatanHarianActivity"
            android:exported="false"
            android:label="Ubah Catatan Harian"
            android:parentActivityName=".MenuActivity" />
        <activity
            android:name=".ui.catatanharian.AddCatatanHarianActivity"
            android:exported="false"
            android:label="Tambah Catatan Harian"
            android:parentActivityName=".MenuActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>